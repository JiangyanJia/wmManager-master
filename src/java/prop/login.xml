    <FUNC id="loginOutClzz"  attr="loginoutclz" tpl="{'err':'@loginoutclz'}" desc="退出登录">
        <CLZZ exec="com.faster.buzz.LoginBuzz->loginOut" tpl="1"></CLZZ>
    </FUNC>
    <PAGE id="basicMsg" path="page/views/basic.jsp" desc="基本信息">
        <SQL id="dmm" tpl="select u.*,ur.rid from t_sys_user u, t_sys_user_role ur where u.uid = ur.uid and u.uid='$uid'" storeRow="1" user="uid" upper="false"></SQL>
    </PAGE>
    
    <FUNC id="xcxLogin" attr="info" tpl="{'err':'@info'}"  desc="获取会员编号">
        <CLZZ exec="com.faster.buzz.UserInfo->user" tpl="1"></CLZZ>
    </FUNC>


