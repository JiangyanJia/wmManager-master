    <FUNC id="loginClzz"  attr="loginclz" tpl="{'err':'@loginclz'}"  check="userName,password:pwd:密码验证" desc="登录校验">
        <CLZZ exec="com.faster.buzz.LoginBuzz->login" tpl="1"></CLZZ>
    </FUNC>

