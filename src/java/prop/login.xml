        <CLZZ exec="com.faster.buzz.LoginBuzz->gisLogin" tpl="1"></CLZZ>
    </FUNC>-->

    <FUNC id="gisWeblogin"  attr="loginclz" tpl="{'err':'@loginclz'}"  check="userName" desc="gis前台登录校验">
        <CLZZ exec="com.faster.buzz.LoginBuzz->gisWebLogin" tpl="1"></CLZZ>
    </FUNC>
